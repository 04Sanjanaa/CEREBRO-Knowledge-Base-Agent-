# KB-Agent Environment Configuration
# Copy this file to .env and fill in your values

# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=True
FLASK_HOST=0.0.0.0
FLASK_PORT=5000

# Frontend Configuration
REACT_APP_API_URL=http://localhost:5000

# Database
DATABASE_URL=sqlite:///kb_agent.db

# Vector Database
VECTOR_DB_PATH=./chroma_db

# Embedding Model
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2

# Search Settings
SEARCH_TOP_K=3
SEARCH_THRESHOLD=0.5
MIN_SIMILARITY_SCORE=0.3

# API Settings
API_TIMEOUT=30
MAX_RESULTS=10

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/kb_agent.log

# Security
SECRET_KEY=your-secret-key-change-in-production
SESSION_COOKIE_SECURE=False
SESSION_COOKIE_HTTPONLY=True

# CORS Settings
CORS_ORIGINS=https://cerebrokbagent-gvhrmheyp-sanjanaa-ps-projects.vercel.app


# Document Settings
MAX_DOCUMENT_SIZE=10485760
ALLOWED_DOCUMENT_TYPES=pdf,txt,docx,md
